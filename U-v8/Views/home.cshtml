<!-- HERO AREA -->
        <section class="l-hero">
            <div class="l-hero--overley"></div>
            <div class="l-hero--cover">
                <div class="hero-content">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="hero-content--text">
                                    <h1>
                                        Taranaki Home Expo
                                    </h1>
                                    <p>Turn your home and lifestyle dreams into reality!</p>
                                    <p>13 - 15 April 2019 At TSB Stadium</p>
                                    <div class="l-v-padding">
                                        <a class="btn" href="visiting.html">
                                            Get Ready
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="js-countdown counter text-center">
                                    <ul id="countdown_dashboard">
                                        <li>
                                            <div class="dash days_dash">
                                                <div class="digit"><div class="js-countdown-days bottom" style="display: block;"></div></div>
                                                <span class="dash_title">Days</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="dash hours_dash">
                                                <div class="digit"><div class="js-countdown-hours bottom" style="display: block;"></div></div>
                                                <span class="dash_title">Hours</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="dash minutes_dash">
                                                <div class="digit"><div class="js-countdown-minutes bottom" style="display: block;"></div></div>
                                                <span class="dash_title">Minutes</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="dash seconds_dash">
                                                <div class="digit"><div class="js-countdown-seconds bottom" style="display: block;"></div></div>
                                                <span class="dash_title">Seconds</span>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Intro -->
